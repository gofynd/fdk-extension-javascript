{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "coverage",
    "spec",
    "spec.js",
    "examples"
  ]
}